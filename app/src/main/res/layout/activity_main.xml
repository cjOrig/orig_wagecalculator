<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="Overtime Wage = P130.00 "
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00cd00"
        android:text="Compute"
        app:layout_constraintEnd_toEndOf="@+id/inputvalue"
        app:layout_constraintStart_toStartOf="@+id/inputvalue"
        app:layout_constraintTop_toBottomOf="@+id/inputvalue" />

    <EditText
        android:id="@+id/inputvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#00cd00"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtanswer"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="...."
        android:textColor="#00cd00"
        app:layout_constraintEnd_toEndOf="@+id/btnCompute"
        app:layout_constraintStart_toStartOf="@+id/btnCompute"
        app:layout_constraintTop_toBottomOf="@+id/btnCompute" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="78dp"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal"
        android:text="WAGE CALCULATOR"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="155dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="Hourly Wage = P100.00 "
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Work Hours = 8hrs"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>